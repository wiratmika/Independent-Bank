extends layouts/default

block content
  include includes/header

  .container
    .row
      .col-md-8.col-md-offset-2
        ol.breadcrumb
          li: a(href='/dashboard.html') Beranda
          li: a(href='/transaction.html') Transaksi
          li.active Pembelian

        div
          ul.nav.nav-tabs
            li.active: a(href='#voucher' data-toggle='tab') Voucher HP

          .tab-content
            .tab-pane.active#phone
              form.form-horizontal
                .form-group
                  label.col-md-3.control-label Dari Rekening
                  .col-md-9
                    select.form-control
                      option Rekening Utama (00000000)

                .form-group
                  .radio.col-md-3
                    label.control-label
                      input(type='radio' name='type' checked)
                      | Pembelian Langsung

                .form-group
                  label.col-md-3.control-label Penyedia Jasa
                  .col-md-9
                    select.form-control
                      option Telkomsel
                      option Vodafone
                      option Verizon
                      option Vasilkom

                .form-group
                  label.col-md-3.control-label Nomor Telepon
                  .col-md-9
                    input.form-control(type='text')

                .form-group
                  .radio.col-md-3
                    label.control-label
                      input(type='radio' name='type')
                      | Pembelian Terdaftar
                  .col-md-8
                    select.form-control
                      option Pulsa HP 1
                      option Pulsa selingkuhan

                .form-group
                  .col-md-offset-3.col-md-9
                    input(type='checkbox')
                    | Simpan ke transaksi favorit

                .form-group
                  .col-md-3
                    span.glyphicon.glyphicon-info-sign(data-toggle='tooltip' data-placement='bottom' title='Keterangan: Berikut merupakan suatu keterangan hehe')
                  .col-md-9
                    .button-transaction
                      a.btn.btn-danger(href='/transfer.html') Batal
                      a.btn.btn-success(data-toggle='modal' data-target='#token') Lanjutkan

  .modal.fade#token
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss='modal')
            span &times;
          h4.modal-title Masukkan Token
        .modal-body.form-horizontal
          form
            .form-group
              label.col-md-4.control-label Token Internet Banking
              .col-md-8
                input.form-control(type='text')
            .form-group
              .col-md-8.col-md-offset-4
                a.btn.btn-primary(data-dismiss='modal' data-toggle='modal' data-target='#transaksi-berhasil') Kirim

  .modal.fade#transaksi-berhasil
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss='modal')
            span &times;
          h4.modal-title Transaksi Favorit
        .modal-body
          h3.text-center Transfer
          h2.text-center BERHASIL
          h3.text-center Diproses
        .modal-footer
          a.btn.btn-default(href='/dashboard.html') Kembali ke Beranda
