extends layouts/default

block content
  include includes/header

  .container
    .row
      .col-md-8.col-md-offset-2
        ol.breadcrumb
          li: a(href='/dashboard.html') Beranda
          li: a(href='#') Transaksi
          li.active Pembayaran Utilitas

        div
          ul.nav.nav-tabs
            li.active: a(href='#phone' data-toggle='tab') Telepon
            li: a(href='#gas' data-toggle='tab') Listrik &amp; Gas
            li: a(href='#water' data-toggle='tab') PAM
            li: a(href='#cable' data-toggle='tab') Kabel TV
            li: a(href='#internet' data-toggle='tab') Internet

          .tab-content
            .tab-pane.active#phone
              form.form-horizontal
                .form-group
                  label.col-md-3.control-label Dari Rekening
                  .col-md-9
                    select.form-control
                      option Rekening Utama (00000000)

                .form-group
                  label.col-md-3.control-label Penyedia Jasa
                  .col-md-9
                    select.form-control
                      option Telkomsel
                      option Vodafone
                      option Verizon
                      option Vasilkom

                .form-group
                  label.col-md-3.control-label Nomor Telepon
                  .col-md-9
                    input.form-control(type='text')

                .form-group
                  .col-md-offset-3.col-md-9
                    input(type='checkbox')
                    | Simpan ke transaksi favorit

                .form-group
                  .col-md-3
                    span.glyphicon.glyphicon-info-sign(data-toggle='tooltip' data-placement='bottom' title='Keterangan: Berikut merupakan suatu keterangan hehe')
                  .col-md-9
                    .button-transaction
                      a.btn.btn-danger(href='/transfer.html') Batal
                      a.btn.btn-success(data-toggle='modal' data-target='#token') Lanjutkan

            .tab-pane#gas
            .tab-pane#water
            .tab-pane#cable
            .tab-pane#internet

  .modal.fade#token
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss='modal')
            span &times;
          h4.modal-title Masukkan Token
        .modal-body.form-horizontal
          form
            .form-group
              label.col-md-4.control-label Token Internet Banking
              .col-md-8
                input.form-control(type='text')
            .form-group
              .col-md-8.col-md-offset-4
                a.btn.btn-primary(data-dismiss='modal' data-toggle='modal' data-target='#transaksi-berhasil') Kirim

  .modal.fade#transaksi-berhasil
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button' data-dismiss='modal')
            span &times;
          h4.modal-title Transaksi Favorit
        .modal-body
          h3.text-center Transfer
          h2.text-center BERHASIL
          h3.text-center Diproses
        .modal-footer
          a.btn.btn-default(href='/dashboard.html') Kembali ke Beranda
